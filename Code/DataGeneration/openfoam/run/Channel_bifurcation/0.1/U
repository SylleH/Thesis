FoamFile
{
    format      ascii;
    class       volVectorField;
    location    "0.1";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    front
    {
        type            empty;
    }
    back
    {
        type            empty;
    }
    bottom
    {
        type            zeroGradient;
    }
    left
    {
        type            noSlip;
    }
    top
    {
        type            uniformFixedValue;
        uniformValue    
        {
            type            scale;
            scale           
            {
                type            squarePulse;
                start           0.3;
                duration        0.3;
            }
            xScale          
            {
                type            constant;
                value           1;
            }
            value           
            {
                type            constant;
                value           (0 -0.7 0);
            }
        }
        value           uniform (0 -0 0);
    }
    right
    {
        type            noSlip;
    }
    inner_arc
    {
        type            noSlip;
    }
}


