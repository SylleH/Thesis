FoamFile
{
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    front
    {
        type            empty;
    }

    back
    {
        type            empty;
    }

    bottom
    {
        type            uniformFixedValue;
	  uniformValue
    	{
        	type            sine;
		frequency	0.5;
		amplitude	5;	
        	scale		1;
        	level		7;       	;
    	}
    }

    left
    {
        type            zeroGradient;
    }

    top
    {
        type		zeroGradient;
    }

    right
    {
        type            zeroGradient;
    }
    
    inner_arc
    {
        type            zeroGradient;
    }
}

