FoamFile
{
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    front
    {
        type            empty;
    }

    back
    {
        type            empty;
    }

    bottom
    {
        type            zeroGradient;
    }

    left
    {
        type            noSlip;
    }
    
    top
    {
    type         uniformFixedValue;
    uniformValue
    	{
        	type            scale;
		scale		squarePulse;
		start		0.3;	
        	duration	0.3;
        	value        	(0 -0.7 0);
    	}
    }

    right
    {
        type            noSlip;
    }

}

// ************************************************************************* //
